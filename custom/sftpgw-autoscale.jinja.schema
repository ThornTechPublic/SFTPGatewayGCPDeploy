info:
  title: SFTP Gateway Highly Available
  author: Thorn Technologies
  description: Creates a HA SFTPGW setup

required:
  - region

properties:
  region:
    type: string
    description: Region in which to run the service
    default: us-east4
  minSize:
    type: integer
    description: Minimum size of the cluster of SFTP Gateway instances
    default: 1
  maxSize:
    type: integer
    description: Maximum size of the cluster for autoscaling SFTP Gateway instances
    default: 4
